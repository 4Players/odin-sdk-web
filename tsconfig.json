{
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "strict": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "declaration": true,
        "declarationDir": "./lib",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "esnext",
            "dom"
        ],
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
